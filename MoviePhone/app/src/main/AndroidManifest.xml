<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.moviephone.android.mainactivity">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/movie_phone_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/movie_phone_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.moviephone.android.mainactivity.AmcNowShowing" />
        <activity android:name="com.moviephone.android.mainactivity.AmcComingSoon" />
        <activity android:name="com.moviephone.android.mainactivity.HarkinsNowShowing" />
        <activity android:name="com.moviephone.android.mainactivity.HarkinsComingSoon" />
        <activity android:name="com.moviephone.android.mainactivity.HarkinsDetailActivity" />
        <activity android:name="com.moviephone.android.mainactivity.AmcDetailActivity" />

        <activity
            android:name="com.moviephone.android.mainactivity.SplashScreen"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.moviephone.android.mainactivity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>